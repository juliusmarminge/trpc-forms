{
  "name": "trpc-form",
  "description": "form library tightly coupled with trpc mutations",
  "version": "0.2.0",
  "keywords": [
    "trpc",
    "form",
    "forms",
    "react",
    "zod"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/juliusmarminge/trpc-tools",
    "directory": "packages/form"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ignore-path ../../.gitignore",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@trpc/react-query": "^10.2.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@tanstack/react-query": "^4.20.9",
    "@trpc/client": "^10.8.1",
    "@trpc/react-query": "^10.8.1",
    "@trpc/server": "^10.8.1",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "eslint": "^8.31.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.2.3",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  }
}
